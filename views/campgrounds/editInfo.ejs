<%- include("../partials/header") %>
<div class="container">
  <div class="row mt-5">
    <div class="col-10 col-sm-10 col-md-8  mx-auto">
      <h1 class="text-center">Edit: <%=data.name %></h1>


      <form action="/campgrounds/<%=data._id%>?_method=PUT" method="POST" enctype="multipart/form-data" id="form1">
          <div class="container">
              <div class="form-group row">           
                  <div class="col-12">
                    <input type="text" class="form-control" name="name" placeholder="YelpCamp Name" value="<%=data.name %>">
                  </div>
              </div>
              
              <div class="form-group row">           
                <div class="col-12">
                  <input type="text" class="form-control" name="location" placeholder="Location"  value="<%=data.location%>">
                </div>
                
            </div>
              <div class="form-group row">           
                <div class="col-12">
                  <textarea type="text" class="form-control p-4" name="description" rows="15" placeholder="Write Desciption"> <%=data.description %></textarea>
                </div>
                
              </div>
              <div class="form-group row">           
                <div class="col-12">
                  <label for="newphoto">Upload Image</label><br>
                  <input class="p-0" style="display: inline;" type="file" class="form-control" id="newphoto" name="image" accept="image/*">
                </div>           
            </div>
              <div class="form-group row">           
                  <div class="col-12">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                  </div>
                  
              </div>
              <a href="/campgrounds">Get Back to camp</a>
          </div> 
      </form>
    </div>
  </div>

</div>



<%- include("../partials/normalFooter") %>
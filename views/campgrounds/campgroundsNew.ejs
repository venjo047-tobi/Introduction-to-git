<%- include("../partials/header") %>
<div class="container">
    <h1 class="text-center">Create a New Campground</h1>

</div>


<form action="/campgrounds" method="POST" id="form1">
    <div class="container">
        <div class="form-group row">           
            <div class="col-12">
              <input type="text" class="form-control" name="name" placeholder="YelpCamp Name">
            </div>
        </div>
        <div class="form-group row">           
          <div class="col-12">
            <input type="number" class="form-control" name="price" min="0.99" >
          </div>
        </div>
        <div class="form-group row">           
            <div class="col-12">
              <input type="text" class="form-control" name="image" placeholder="Image Url">
            </div>           
        </div>
        <div class="form-group row">           
          <div class="col-12">
            <input type="text" class="form-control" name="description" placeholder="Write Desciption">
          </div>
          
        </div>
        <div class="form-group row">           
            <div class="col-12">
              <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
            
        </div>
        <a href="/campgrounds">Get Back to camp</a>
    </div> 
</form>





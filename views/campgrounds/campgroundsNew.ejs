<%- include("../partials/header") %>
<div class="container">
    <h1 class="text-center">Create a New Campground</h1>

</div>


<form action="/campgrounds" method="POST" id="form1" enctype="multipart/form-data">
    <div class="container">
        <div class="form-group row">           
            <div class="col-12">
              <input type="text" class="form-control" name="campground[name]" placeholder="YelpCamp Name">
            </div>
        </div>
        <div class="form-group row">           
          <div class="col-12">
            <input type="number" class="form-control" name="campground[price]" min="0.99" >
          </div>
        </div>
        <div class="form-group row">           
            <div class="col-12">
              <input type="file" class="form-control" name="image" accept="image/*" required>
            </div>           
        </div>
        <div class="form-group row">           
          <div class="col-12">
            <input type="text" class="form-control" name="campground[description]" placeholder="Write Desciption">
          </div>
          
        </div>
        <div class="form-group row">           
            <div class="col-12">
              <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
            
        </div>
        <a href="/campgrounds">Get Back to camp</a>
    </div> 
</form>




<%- include("../partials/normalFooter") %>
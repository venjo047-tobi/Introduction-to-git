<%-include("../partials/header") %> 
    <div class="container">
        <div class="row mt-5">
                <div class="col-3">
                    <div class="card" style="width: 16rem;">
                      <%if(data == null) {%>
                        <img src="https://i.imgur.com/IJCvoA6.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                          <h5 class="card-title text-center"><%=currentUser.username%></h5>
                          <a href="#" class="btn btn-primary ml-3">Change Profile Picture</a>
                        </div>

                      <%} else { %>
                          <%if(data.proPic == null) {%>
                            <img src="https://i.imgur.com/IJCvoA6.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                            <h5 class="card-title text-center"><%=data.name%></h5>
                            <a href="#" class="btn btn-primary ml-3">Change Profile Picture</a>
                            </div>

                          <%} else {%>
                            <img src="<%=data.proPic%>" class="card-img-top" alt="...">
                            <div class="card-body">
                              <h5 class="card-title text-center"><%=data.name%></h5>
                              <a href="#" class="btn btn-primary ml-3">Change Profile Picture</a>
                            </div>

                          <%}%>
                      <%}%>

                        
         
                      </div>
                </div>
                <div class="col-9">
                    <div class="card">
                        <div class="card-header">
                          Shared Photos
                        </div>
                        <div class="card-body">
                          <h5 class="card-title">My Shared Photos</h5> 
                          <div class="row">
                            <%if(data == null) {%>

                            <%} else {%>

                              <% data.camping.forEach(function(data){ %>
                           
                                <div class="col-6">
                                  <div class="card" style="width: 100%;">
                                    <img src="<%=data.image%>" class="card-img-top" alt="...">
                                    <div class="card-body">
                                      <h5 class="card-title"><%=data.name%></h5>
                                      <p class="card-text"><%=data.description%></p>
                                      <a href="#" class="btn btn-success float-right">Go somewhere</a>
                                    </div>
                                  </div>
                                </div>
                              
                              
                            <% }) %>
                            <%}%>

                        </div>
                        </div>
                      </div>
                </div>
        </div>
    </div>

  

<%-include("../partials/footer") %>
<%-include("../partials/header") %> 
<div class="container">
    <div class="row mt-5">
            <div class="col-3">
                <div class="card" style="width: 16rem;">
                    <img src="<%=data.proPic%>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title text-center"><%=data.name%></h5>
                    </div>             
                </div>   
            </div>
            <div class="col-9">
                <div class="card">
                    <div class="card-header">
                      Shared Photos
                    </div>
                    <div class="card-body">
                      <h5 class="card-title">Shared Photos</h5> 
                      <div class="row">
                        <%if(data == null) {%>

                        <%} else {%>

                          <% data.camping.forEach(function(data){ %>
                       
                            <div class="col-6">
                              <div class="card" style="width: 100%;">
                                <img src="<%=data.image%>" class="card-img-top" alt="...">
                                <div class="card-body">
                                  <h5 class="card-title"><%=data.name%></h5>
                                  <p class="card-text"><%=data.description%></p>
                                  

                                  <a class="btn btn-primary float-right mr-2" href="/campgrounds/<%=data._id%>">View</a>
                                </div>
                              </div>
                            </div>
                          
                          
                        <% }) %>
                        <%}%>

                    </div>
                    </div>
                  </div>
            </div>
    </div>
 
    </div>
</div>



<%- include("../partials/normalFooter") %>